{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/ontologies.schema.json",
  "title": "OntologyCatalogue",
  "description": "Schema for a list of ontologies used in CELINE.",
  "type": "object",
  "properties": {
    "ontologies": {
      "type": "array",
      "description": "List of ontology definitions.",
      "items": {
        "type": "object",
        "required": [
          "name",
          "description",
          "link",
          "src",
          "keywords"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the ontology."
          },
          "description": {
            "type": "string",
            "description": "Short description of the ontology."
          },
          "link": {
            "type": "string",
            "format": "uri",
            "description": "Main homepage or documentation link."
          },
          "definitions": {
            "description": "List of URIs to XML/TTL/OWL/specification file.",
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            },
            "minItems": 0
          },
          "license": {
            "type": "string",
            "description": "Licensing information"
          },
          "keywords": {
            "type": "array",
            "description": "List of domain and entity keywords associated with the ontology.",
            "items": {
              "type": "string"
            },
            "minItems": 0
          }
        }
      }
    }
  },
  "required": [
    "ontologies"
  ],
  "additionalProperties": false
}