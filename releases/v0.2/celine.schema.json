{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://celine-eu.github.io/schemas/rec-registry.json",
  "title": "CELINE REC Registry Document",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "context",
    "community",
    "participants",
    "memberships",
    "sites",
    "assets",
    "meters",
    "timeseries"
  ],
  "properties": {
    "context": {
      "type": "object",
      "description": "Prefix map for CURIE expansion (JSON-LD-like). Keys are prefixes; values are base IRIs.",
      "additionalProperties": {
        "type": "string",
        "format": "uri"
      }
    },
    "community": {
      "$ref": "#/$defs/EnergyCommunity"
    },
    "participants": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Participant"
      }
    },
    "memberships": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Membership"
      }
    },
    "sites": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Site"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Asset"
      }
    },
    "meters": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Meter"
      }
    },
    "timeseries": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/TimeSeries"
      }
    },
    "topology": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "edges": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "source",
              "target",
              "predicate"
            ],
            "properties": {
              "source": {
                "type": "string",
                "minLength": 1
              },
              "target": {
                "type": "string",
                "minLength": 1
              },
              "predicate": {
                "$ref": "#/$defs/CurieOrUri"
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "CurieOrUri": {
      "description": "Either an absolute IRI/URI or a CURIE such as auth:users/123.",
      "anyOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "string",
          "pattern": "^[A-Za-z][A-Za-z0-9+.-]*:[^\\s]+$"
        }
      ]
    },
    "Key": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._-]*$"
    },
    "GeoJSON": {
      "description": "GeoJSON geometry. Coordinates must be lon/lat order (WGS84).",
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Point",
            "Polygon",
            "MultiPolygon",
            "LineString",
            "MultiPoint",
            "MultiLineString"
          ]
        },
        "coordinates": {}
      },
      "additionalProperties": true
    },
    "EnergyCommunity": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key",
        "name"
      ],
      "properties": {
        "key": {
          "$ref": "#/$defs/Key"
        },
        "id": {
          "$ref": "#/$defs/CurieOrUri",
          "description": "Optional explicit @id IRI for JSON-LD generation."
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "website": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "coverage_areas": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "key",
              "name"
            ],
            "properties": {
              "key": {
                "$ref": "#/$defs/Key"
              },
              "name": {
                "type": "string"
              },
              "geo": {
                "anyOf": [
                  {
                    "$ref": "#/$defs/GeoJSON"
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "Participant": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key",
        "name",
        "auth_uri"
      ],
      "properties": {
        "key": {
          "$ref": "#/$defs/Key"
        },
        "id": {
          "$ref": "#/$defs/CurieOrUri"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "kind": {
          "type": [
            "string",
            "null"
          ],
          "description": "Local categorization (e.g., individual, SME, municipality)."
        },
        "auth_uri": {
          "$ref": "#/$defs/CurieOrUri"
        },
        "external_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "contacts": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        }
      }
    },
    "Membership": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key",
        "community",
        "participant",
        "role",
        "status"
      ],
      "properties": {
        "key": {
          "$ref": "#/$defs/Key"
        },
        "community": {
          "$ref": "#/$defs/Key"
        },
        "participant": {
          "$ref": "#/$defs/Key"
        },
        "role": {
          "type": "string",
          "enum": [
            "operator",
            "prosumer",
            "consumer"
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "inactive",
            "pending"
          ]
        }
      }
    },
    "Site": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key",
        "name",
        "geo"
      ],
      "properties": {
        "key": {
          "$ref": "#/$defs/Key"
        },
        "id": {
          "$ref": "#/$defs/CurieOrUri"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "address": {
          "type": [
            "string",
            "null"
          ]
        },
        "geo": {
          "anyOf": [
            {
              "$ref": "#/$defs/GeoJSON"
            },
            {
              "type": "object",
              "description": "Legacy lat/lon form (accepted for backward compatibility).",
              "required": [
                "lat",
                "lon"
              ],
              "properties": {
                "lat": {
                  "type": "number"
                },
                "lon": {
                  "type": "number"
                }
              },
              "additionalProperties": false
            }
          ]
        }
      }
    },
    "Asset": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key",
        "name",
        "type"
      ],
      "properties": {
        "key": {
          "$ref": "#/$defs/Key"
        },
        "id": {
          "$ref": "#/$defs/CurieOrUri"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "SUBSTATION",
            "PV_SYSTEM",
            "STORAGE_SYSTEM",
            "OTHER"
          ]
        },
        "owner": {
          "anyOf": [
            {
              "$ref": "#/$defs/Key"
            },
            {
              "type": "null"
            }
          ]
        },
        "site": {
          "anyOf": [
            {
              "$ref": "#/$defs/Key"
            },
            {
              "type": "null"
            }
          ]
        },
        "geo": {
          "anyOf": [
            {
              "$ref": "#/$defs/GeoJSON"
            },
            {
              "type": "null"
            }
          ]
        },
        "capacity_kwp": {
          "type": [
            "number",
            "null"
          ]
        },
        "capacity_kwh": {
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "Meter": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key",
        "sensor_id",
        "participant"
      ],
      "properties": {
        "key": {
          "$ref": "#/$defs/Key"
        },
        "id": {
          "$ref": "#/$defs/CurieOrUri"
        },
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "participant": {
          "$ref": "#/$defs/Key"
        },
        "site": {
          "anyOf": [
            {
              "$ref": "#/$defs/Key"
            },
            {
              "type": "null"
            }
          ]
        },
        "sensor_id": {
          "type": "string",
          "minLength": 1
        },
        "substation": {
          "anyOf": [
            {
              "$ref": "#/$defs/Key"
            },
            {
              "type": "null"
            }
          ]
        },
        "pod_code": {
          "type": [
            "string",
            "null"
          ],
          "description": "Deprecated/PII. Prefer sensor_id."
        }
      }
    },
    "TimeSeries": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key",
        "metric",
        "unit",
        "observed_entity",
        "dataset_uri"
      ],
      "properties": {
        "key": {
          "$ref": "#/$defs/Key"
        },
        "id": {
          "$ref": "#/$defs/CurieOrUri"
        },
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "metric": {
          "type": "string",
          "minLength": 1
        },
        "unit": {
          "type": "string",
          "minLength": 1
        },
        "observed_entity": {
          "$ref": "#/$defs/Key"
        },
        "dataset_uri": {
          "$ref": "#/$defs/CurieOrUri"
        },
        "dataset_filter": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        }
      }
    }
  }
}